{% include("Navbar.njk") %}
<!DOCTYPE html>
<html>
    <head>
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <meta charset="utf-8">
        <title>Kainos Jobs
        </title>
    </head>
    <style>
        @font-face {
            font-family: 'gothic';
            src: url('./assets/fonts/GOTHIC/GITHIC.ttf')
        }
        body {
            font-family: Arial;
            color: #333333;
        }
        .split {
            height: 100%;
            width: 50%;
            position: fixed;
            z-index: 1;
            top: 0;
            overflow-x: hidden;
        }
        .left {
            left: 0;
            margin-top: 120px;
        }
        .right {
            display: block;
            margin-top: 10vh;
            right: 0;
        }
        .cards {
            padding-bottom: 150px;
        }
        .card {
            border-top: 1px solid #7b7b7b;
            transition: transform 0.2s;
            cursor: pointer;
            display: block;
            justify-content: center;
            align-items: center;
            margin: auto;
            overflow: scroll;
            padding: 15px;
            width: 60%;
            height: auto;
            font-family: 'gothic';
        }
        .specdetails {
            border-radius: 5px;
            padding: 40px;
            width: calc(80px + 30vw);
            min-height: calc(50vh);
            border-top: 10px solid #288629;
            border-left: 1px solid #7b7b7b;
            border-bottom: 1px solid #7b7b7b;
            border-right: 1px solid #7b7b7b;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-family: 'gothic';
        }
        .endcard {
            border-top: 1px solid #7b7b7b;
            display: block;
            justify-content: center;
            align-items: center;
            margin: auto;
            overflow: scroll;
            padding: 15px;
            width: 60%;
            height: auto;
            font-family: 'gothic';
        }
        .card:hover {
            background: #E2E2E2;
            transform: scale(1.06);
        }
        .bttn {
            background-color: #288629;
            border: 0;
            color: #fff;
            font-size: 0.9em;
            padding: 12px 25px;
            letter-spacing: 1px;
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 200px;
            font-family: 'gothic';
        }
        h2 {
            display: block;
            font-size: 20px;
            margin: 0.2em 0;
            font-weight: bold;
            font-family: 'gothic';
        }
        p {
            display: block;
            font-size: 18px;
            margin: 0.1em 0;
            font-family: 'gothic';
        }
        .editbtn {
            width: auto;
            float: right;
            font-size: 15px;
            background-color: transparent;
            background-repeat: no-repeat;
            border: none;
            overflow: hidden;
            outline: none;
            font-family: 'gothic';
        }
        .deletebtn {
            width: auto;
            float: right;
            font-size: 15px;
            background-color: transparent;
            background-repeat: no-repeat;
            border: none;
            overflow: hidden;
            outline: none;
            font-family: 'gothic';
        }
        .emptystate {
            text-align: center;
            padding-top: 20vh;
        }
        @media(max-width: 767px) {
            .right {
            }
        }
        ::-webkit-scrollbar {
            display: none;
        }
    </style>
    <body>
        <div class="split left">
            <div class="cards">
                {% for job in jobRoles %}
                    <div class="card" id="{{ job.roleID }}" onkeyup="onKeyUp(event,{{ job.roleID }})" onclick="ajaxRequest({{ job.roleID }})" tabindex="{{ job.roleID }}">
                        <button class="deletebtn" onclick="deleteRole('{{ job.role_title }}',{{ job.roleID }})">Delete
                            <i class="fa fa-trash"></i>
                        </button>
                        <a href="">
                            <button class="editbtn">Edit
                                <i class='far fa-edit'></i>
                            </button>
                        </a>
                        <h2>{{ job.role_title }}</h2>
                        <br>
                        <p>Band: {{ job.bandName }}</p>
                        <p>Capability: {{ job.capability_name }}</p>
                        <br>
                    </div>
                {% endfor %}
                <div class="endcard">
                    <h2>
                        End of jobs
                    </h2>
                </div>
            </div>
            <br><br><br>
            <div class="split right">
                <div class="specdetails">
                    <h2 id="jobtitle" aria-hidden="true"></h2><br><p id="spectitle"></p>
                    <p id="spec"></p>
                    <a id="splink">
                        <button id="spbutton" class="bttn" hidden>View on Sharepoint</button>
                    </a>
                    <p id="empty" class="emptystate">Click a job role to view more details</p>
                </div>
            </div>
        </body>
        <script>
            function deleteRole(x, id) {
                var del = window.confirm("Are you sure you want to delete " + x + "?");
                if (del === true) {
                    window.location.href = "/delete/" + id;
                }
            }
            function onKeyUp(e, id) {
                if (e.key === "Enter") {
                    ajaxRequest(id);
                }
            }
            function ajaxRequest(id) { // declare the variable at the top, even though it will be null at first
                var req = null;
                // figure out what kind of support we have for the XMLHttpRequest object
                if (window.XMLHttpRequest) { // modern browsers
                    req = new XMLHttpRequest();
                } else { // good ol' lousy IE
                    req = new ActiveXObject("Microsoft.XMLHTTP");
                };
                req.onreadystatechange = function () {
                    if (req.readyState === 4 && req.status === 200 && req.responseText !== 'Could not get job specification') {
                        var json = JSON.parse(req.responseText);
                        document.getElementById('empty').innerHTML = '';
                        document.getElementById('spectitle').innerHTML = 'Job Specification:';
                        document.getElementById('spec').innerHTML = json.jobSpecification;
                        document.getElementById('jobtitle').innerHTML = json.kainosJobTitle;
                        document.getElementById('splink').href = json.jobSpecificationLink;
                        document.getElementById('spbutton').removeAttribute("hidden") = json.jobSpecificationLink;
                    } else {
                        document.getElementById('empty').innerHTML = req.responseText;
                    }
                };
                req.open("GET", "job-specification/" + id, true);
                req.send();
            };
            document.getElementById('request').onclick = ajaxRequest;
        </script>
    </body>
</html>