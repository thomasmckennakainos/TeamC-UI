{% block content %}

<h1>Registration</h1>

<form class="form" action="/register" method="POST">
  <label for="email">Email</label><br>
  <input type="text" id="email" name="email" placeholder="example@example.com"><br>
  <label for="password">Password</label><br>
  <input type="password" id="password" name="password" placeholder="********"><br><br>
  
  <input type="radio" id="role" name="role" value="Admin">
  <label for="role">Admin</label><br>
  <input type="radio" id="role" name="role" value="Employee">
  <label for="role">Employee</label><br><br>
  <button type="submit">Register</button>
</form> 

{% if errormessage %}
  {{errormessage}}
{% endif %}

{% if confirmationmessage %}
  {{confirmationmessage}}
{% endif %}

{% endblock %}